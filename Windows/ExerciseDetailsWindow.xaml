<Window x:Class="WorkoutApp.Windows.ExerciseDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorkoutApp.Windows"
        mc:Ignorable="d"
        Title="ExerciseDetailsWindow" Height="450" Width="800"
        x:Name="ExerciseDetailsWindowName">
    <Grid HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="{Binding Exercise.Name}" FontWeight="Bold" FontSize="20" Margin="5" HorizontalAlignment="Center" />

        <TextBlock Grid.Row="1" Text="{Binding Exercise.BodyPart.Name}" FontSize="16" Margin="5" HorizontalAlignment="Center" />

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Vertical" Margin="5">
                <Label Content="Powtórzenia" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="18"/>
                <Label Content="Waga" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="18"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Orientation="Vertical" Margin="5">
                <TextBox Name="Reps" Width="100" Margin="5" PreviewTextInput="Reps_PreviewTextInput" FontSize="18"/>
                <TextBox Name="Weight" Width="100" Margin="5" PreviewTextInput="Weight_PreviewTextInput" FontSize="18"/>
            </StackPanel>
            <Button Name="Add" Grid.Column="2" Width="80" Margin="5" Content="Dodaj" FontSize="18" Click="Add_Click"/>
        </Grid>
    </Grid>
    
</Window>
